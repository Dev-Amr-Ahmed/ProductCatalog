@using ProductCatalog.PL.Models
@model ProductAndCategoriesListVM
@{
    ViewData["Title"] = "All Products";
}

<div class="row">
    <h3>@ViewData["Title"]</h3>
    <a class="btn btn-primary col-2" asp-controller="Product" asp-action="Add">Add Product</a>
</div>
@if (!Model.Products.Any())
{
    <div class="alert-warning text-center my-2 p-5 fs-2">
        No Products
    </div>
}
else
{
    <div class="row my-2">
        <div class="col alert alert-danger">
            <partial name="Partials/test" model="@Model.Categories"/>
        </div>
        <div class="col" id="ProductsTable">
            <partial name="Partials/_AllProductsTablePartial" model="@Model.Products" />
        </div>

        <!-- Delete Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="deleteModalLabel">Delete product</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" id="productId" value="" />
                        <h4>Are you sure you want to delete this product?</h4>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" id="DeleteButton">Delete</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}