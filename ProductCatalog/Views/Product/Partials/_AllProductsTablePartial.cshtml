@using ProductCatalog.PL.Models
@model IEnumerable<ProductVM>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(p => p.Name)</th>
            <th>@Html.DisplayNameFor(p => p.Category)</th>
            <th>@Html.DisplayNameFor(p => p.StartDate)</th>
            <th>@Html.DisplayNameFor(p => p.Duration)</th>
            <th>@Html.DisplayNameFor(p => p.Price)</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category.Name</td>
                <td>@product.StartDate</td>
                <td>@product.Duration.Days Days @product.Duration.Hours Hours</td>
                <td>@product.Price</td>
                <td><a class="btn btn-info" asp-action="Details" asp-route-productId="@product.Id"><i class="bi-eye"></i> Details</a></td>
                <td><a class="btn btn-primary" asp-action="Edit" asp-route-productId="@product.Id"><i class="bi bi-pencil-square"></i> Edit</a></td>
                <td><a class="btn btn-danger" id="deleteProductButton" data-id=@product.Id data-bs-toggle="modal" data-bs-target="#deleteModal"><i class="bi bi-trash"></i> Delete</a></td>
            </tr>
        }
    </tbody>
</table>
